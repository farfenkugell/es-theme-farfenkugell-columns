
<theme defaultView="grid">
    <formatVersion>7</formatVersion>
	
<variables>
    <fullscreenfixSubsetname>Emulationstation Screen Size</fullscreenfixSubsetname>
</variables>

<subset name="fullscreenfix" displayName="${fullscreenfixSubsetname}">
        <include name="3:2">./assets/xml/32.xml</include>
        <include name="4:3">./assets/xml/43.xml</include>
        <include name="16:9">./assets/xml/169.xml</include>
</subset>

   <view name="menu">
      <menuText name="menufooter">
         <fontPath>./fonts/Homizio.ttf</fontPath>
         <fontSize>0.025</fontSize>
      </menuText>
      <menuText name="menutext">
         <fontPath>./assets/fonts/GROBOLDttf</fontPath>
         <fontSize>0.04</fontSize>
       </menuText>
      <menuTextSmall name="menutextsmall">
         <fontPath>./assets/fonts/GROBOLDttf</fontPath>
         <fontSize>0.03</fontSize>
      </menuTextSmall>
      <menuText name="menutitle">
         <fontPath>./assets/fonts/GROBOLDttf</fontPath>
         <fontSize>0.04</fontSize>
      </menuText>
   </view>

</theme>
